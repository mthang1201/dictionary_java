<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.uet.dictionary_java.TranslatorController"
            prefHeight="400.0" prefWidth="600.0"
            styleClass="root-pane">

    <children>
        <!-- Input TextField -->
        <TextField fx:id="input"
                   layoutX="50.0" layoutY="50.0"
                   prefWidth="500.0"
                   promptText="Enter text to translate"
                   styleClass="text-field"/>

        <!-- Translate Button -->
        <Button fx:id="translateBtn"
                layoutX="250.0" layoutY="100.0"
                minWidth="100.0"
                text="Translate"
                onAction="#translateText"
                styleClass="action-button"/>

        <!-- Translated Label -->
        <Label fx:id="translated"
               layoutX="50.0" layoutY="200.0"
               prefWidth="500.0"
               wrapText="true"
               styleClass="translated-label"/>

        <!-- Dictionary Button -->
        <Button fx:id="dictionaryMenu"
                layoutX="250.0" layoutY="300.0"
                minWidth="100.0"
                text="Dictionary"
                onAction="#switchToDictionary"
                styleClass="action-button"/>
    </children>
</AnchorPane>